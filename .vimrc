syntax on
set number
set nobackup
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set smarttab
color flattr

set wildmenu
set cmdheight=1
set laststatus=2
set ruler
set showmode
set showcmd
" fileformat, encoding, tipe, buffer num, RO/HELP/PREVIEW, mod flag, filepath; spacer; line pos, line/total, percentage
